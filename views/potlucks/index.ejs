<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h2>Create a New Potluck</h2>
  <form action="/potlucks" method="POST">
    <label>
      Title:
      <input type="text" name="title" autocomplete="off">
    </label>
    <label>
      Date:
      <input type="datetime-local" name="date">
    </label>
    <label>
      Location:
      <input type="text" name="address">
    </label>
    <button type="submit">Create</button>
  </form>
</section>

<section>
  <h1>All Potlucks</h1>
  <% if (potlucks.length !== 0) { %>
    <ul>
      <% potlucks.forEach(potluck => { %>
        <li> 
          <a href="/potlucks/<%= potluck._id %>"><%= potluck.title %>, <%= potluck.date %></a></li>
      <% }) %>
    </ul>
  <% } else { %>
    <h4>Add a Potluck!</h4>
  <% } %> 

</section>

